
# Local development .env
# Keep local development settings here. Do NOT enable production DB creds.

# Minimal required settings for local development
DJANGO_SECRET_KEY=unsafe-local-secret-change-me
DJANGO_SETTINGS_MODULE=zorpido_config.settings.local

# Use SQLite locally (do NOT set DATABASE_URL for local dev)
#DATABASE_URL=

# Cloudinary / production services are disabled for local development
#CLOUDINARY_CLOUD_NAME=
#CLOUDINARY_API_KEY=
#CLOUDINARY_API_SECRET=

# Optional: development email settings (left commented)
#EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
#DEFAULT_FROM_EMAIL=webmaster@example.com

# Security toggles for local dev (keep False/omitted). Production overrides live elsewhere.
#SESSION_COOKIE_SECURE=False
#CSRF_COOKIE_SECURE=False
#SECURE_SSL_REDIRECT=False
