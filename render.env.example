# Render environment variables example (for reference)

# General
DJANGO_SECRET_KEY=replace-with-a-secure-random-string
ALLOWED_HOSTS=myapp.onrender.com,www.example.com

# Render provides a DATABASE_URL automatically when you add a Postgres service
# If you use an external Postgres, set DATABASE_URL like:
# DATABASE_URL=postgres://user:pass@host:port/dbname

# Cloudinary (optional if you use Cloudinary for media storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Security toggles (Render should serve over HTTPS)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# In Render set the DJANGO_SETTINGS_MODULE to use production settings
#DJANGO_SETTINGS_MODULE=zorpido_config.settings.production
